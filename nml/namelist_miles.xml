</namelist_summary>

<GLOBAL>
    <write_plots type="boolean">           True         </write_plots>
    <write_netcdf type="boolean">          True         </write_netcdf>
    <force_processing type="boolean">      False        </force_processing>
    <wrk_dir type="path">                  @{WORKPATH}  </wrk_dir>
    <plot_dir type="path">                 @{PLOTPATH}/ </plot_dir>
    <climo_dir type="path">                @{CLIMOPATH} </climo_dir>
    <write_plot_vars type="boolean">       True         </write_plot_vars>
    <max_data_filesize type="integer">     100          </max_data_filesize>
    <max_data_blocksize type="integer">    500          </max_data_blocksize>
    <verbosity  type="integer">              1          </verbosity>
    <exit_on_warning  type="boolean">      True         </exit_on_warning>
    <output_file_type>                     png          </output_file_type>
</GLOBAL>

<MODELS>
    <model> CMIP5_ETHZ EC-Earth day  historical r8i1p1 2000 2001 /work/users/jost/cmip5-data </model> 
    <model id="ref"> CMIP5_ETHZ  ERAINT  day  reanalysis r1i1p1 2000 2001 /work/users/jost/esmtest_data  </model>
<!--
    <model>  OBS    ERA-Interim    reanaly    1    2000  2001   /work/users/jost/esmtest_data </model>
     <model> CMIP5      ERAINT   day  reanalysis  r1i1p1  1989 2010  /work/users/paolo/DATA/ERAINTERIM/day/Z500/</model> 
-->
</MODELS>

<!-- Please do not change anything below this line, 
     unless you want to modify the standard diagnostic settings. -->

<DIAGNOSTICS>
    <diag>
        <description>         MiLES Blocking Diagnostic  </description>
        <variable_def_dir>    ./variable_defs/     </variable_def_dir>
        <variable ref_model="ref">            z500                </variable>
        <field_type>          T2Ds                  </field_type>
        <diag_script_cfg_dir> ./nml/cfg_miles/    </diag_script_cfg_dir>
        <diag_script cfg="cfg_miles.r"> miles.py  </diag_script>
        <diag_script cfg="cfg_miles.r"> miles_block.r  </diag_script>
    </diag>
    <diag>
        <description>         MiLES EOF Diagnostic  </description>
        <variable_def_dir>    ./variable_defs/     </variable_def_dir>
        <variable ref_model="ref">            z500                </variable>
        <field_type>          T2Ds                  </field_type>
        <diag_script_cfg_dir> ./nml/cfg_miles/    </diag_script_cfg_dir>
        <diag_script cfg="cfg_miles.r"> miles_eof.r  </diag_script>
    </diag>
</DIAGNOSTICS>

</namelist>
